<script>
    $('#tablaProductos').DataTable({
        language: TablaIdioma
    });

    function eliminar(id, nombre) {
        Swal.fire({
            title: 'Â¿Estas seguro?',
            text: "Seguro desea anular la producto: " + nombre,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'SI'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "<?php echo CargarEnlace('nucleo/ajax/catalogos/producto-eliminar.php') ?>?id=" + id,
                    type: "GET",
                    dataType: "json",
                    cache: false,
                    contentType: false,
                    processData: false,
                    beforeSend: function(dato) {
                        $("#btn" + id).html('Eliminando');
                    }
                }).done(function(dato) {
                    if (dato.estado == 200) {
                        $("#" + id).remove();
                        Swal.fire(
                            'Eliminado!',
                            'Se ha eliminado con Ã©xito.',
                            'success'
                        )
                    } else {
                        Swal.fire(
                            'Error',
                            dato.mensaje,
                            'error'
                        )
                    }
                }).fail(function(dato) {
                    $(".msg").html('');
                    Swal.fire(
                        'Error',
                        'ðŸ˜… Algo salio mal',
                        'error'
                    )
                });
            }
        })
    }
</script>